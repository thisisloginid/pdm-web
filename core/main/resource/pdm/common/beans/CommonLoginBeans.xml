<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="COMMOM.LO" class="${bean.resource}">
        <!--
            SCREENID : First 2 char of domain and sequence 5 char.
            ACTIONID : First char is 'CRUD' or user defined 'U' and there add number of between 0 and 99.
        -->
        <property name="resources">
            <map>
                <entry key="SCMLO0001.I01">
                    <description>Login page</description>
                    <map>
                        <entry key="RESULTPAGE">
                            <map>
                                <entry key="SUCC01" value="/index.do"/>
                            </map>
                        </entry>
                    </map>
                </entry>
                <entry key="SCMLO0001.S01">
                    <description>Login</description>
                    <map>
                        <entry key="MODULES">
                            <list>
                                <!-- required property is klass, method of bean. -->
                                <bean class="${bean.module}">
                                    <property name="klass" value="com.neo.pdm.common.process.CommonLoginProcess" />
                                    <property name="method" value="login" />
                                    <property name="result" value="loginYn"/>    <!-- attribute value is Map key -->
                                    <property name="argument">
                                        <map>
                                            <entry key="userinfo" value="com.neo.pdm.common.model.UserInfo" />
                                        </map>
                                    </property>
                                </bean>
                            </list>
                        </entry>
                        <entry key="RESULTPAGE">
                            <map>
                                <entry key="SUCC01" value="/login.do" />
                            </map>
                        </entry>
                    </map>
                </entry>
                <!-- SCMLO0001.S01 end -->
            </map>
        </property>
    </bean>
    
</beans>